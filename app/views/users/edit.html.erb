<%= display_errors %>

<%= form_for @user, url: user_path(@user), method: :patch do |f| %>

<%= f.label "Edit your name" %>
<%= f.text_field :name, :class => "form-control" %> <br>

<%= f.label "Edit Your email" %>
<%= f.email_field :email, :class => "form-control"  %><br> 

<%= f.submit "Save Details", :class => "btn btn-primary float_right" %>
 <% end %>