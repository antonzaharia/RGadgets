<%= form_for ([@user, @address]) do |f| %>

<%= f.label :line_1 %>
<%= f.text_field :line_1, :class => "form-control" %><br>

<%= f.label :line_2 %>
<%= f.text_field :line_2, :class => "form-control" %><br>

<%= f.label :city %>
<%= f.text_field :city, :class => "form-control" %><br>

<%= f.label :postcode %>
<%= f.text_field :postcode, :class => "form-control" %><br>

<%= f.label :country %>
<%= f.text_field :country, :class => "form-control" %><br>

<%= f.submit "Save Address", :class => "btn btn-primary float_right" %>
<% end %>