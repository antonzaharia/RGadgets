<%= display_errors %>

<%= f.label "Title" %>
<%= f.text_field :title, :class => "form-control"  %><br>

<%= f.label "Image URL" %>
<%= f.text_field :image, :class => "form-control"  %><br>

<%= f.label "Description" %>
<%= f.text_field :description, :class => "form-control"  %><br>

<%= f.label "Price" %>
<%= f.text_field :price, :class => "form-control"  %><br>

<div class="row">
  <div class="col">
    <%= f.collection_select :category_id, Category.all, :id, :name, {:prompt => "Select Category or create one"}, :class => "form-control"  %>
  </div>
  <div class="col">
    <%= f.text_field :category , value: "", :placeholder => "Create a category", :class => "form-control" %><br>
  </div>
</div>

<%= f.submit :class => "btn btn-primary float_right" %>
